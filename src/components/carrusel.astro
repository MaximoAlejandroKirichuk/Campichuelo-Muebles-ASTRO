            <div class="carousel-caption d-none d-md-block">
                <h5><a href="/productos.html">Mesas de comedor</a></h5>
            </div>
        </div>
        <div class="carousel-item">
            <a href="/productos.html">
                <img src="/img/carrusel/ESCRITORIO VIRGINIA.png" class="d-block img-responsive" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a>Escritorios</a></h5>
                </div>
            </a>
        </div>
        <div class="carousel-item">
            <img src="/img/carrusel/foto-carrusel rack tv master.png" class="d-block img-responsive" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5><a href="/producto.html">Racks</a></h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/carrusel/foto-carrusel-1.png" class="d-block img-responsive" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5><a href="/productos.html">20% OFF EN PRODUCTOS SELECCIONADOS</a></h5>
            </div>
        </div>
    </div>
    
<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
</button>
<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
</button>
</div>
<style>
		/* Carrusel */
		
		.carousel{
			background-color: var(--white-color);
		}
		
		.carousel-control-prev-icon,
		.carousel-control-next-icon {
			background-color:var(--secondary-color); 
		}
		
		.carousel-item img {
			object-fit: cover;
		}
		
		.carousel-indicators .active{
			background-color: var(--secondary-color);
		}
		
		.carousel-inner h5 {
    color: var(--black);
    font-size: 1rem;
    text-align: center;
    margin-top: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

	
        @media (max-width: 768px) {
    .img-responsive {
        width: 100%;
        display: flex;
        justify-content: center;
    }
}

@media (min-width: 769px) {
    .carousel-item {
    text-align: center;
}

.carousel-item img {
    margin: 0 auto; /* Centrar horizontalmente */
    display: block; /* Evitar espacios innecesarios debajo de la imagen */
    width: 50%;
}

}
</style>
