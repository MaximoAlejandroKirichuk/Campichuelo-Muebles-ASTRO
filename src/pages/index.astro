---
import Layout from '../layouts/Layout.astro';
import Carrusel from '../components/carrusel.astro';
---

<Layout title="Campichuelo">
	<!DOCTYPE html>
	<html lang="en">
		<meta charset="UTF-8">
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        
    </head>
    <body>
		
			<div id="overlay" style="display: none; position: fixed; width: 100%; height: 100%; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5); z-index: 2;"></div>
            <div class="container">
				
				<main>
					<!--CARROUSEL SACADO DE BOOTSTRAPP-->
					<Carrusel/>
				
				<!--INFORMACION RESPECTO AL PRODUCTO Y EMPIEZO A USAR TAILWIND-->
				<section class="text-center info-inicio">
					<div class="container">
						<div class="row justify-content-center">
							<div class="col-md-8">
								<div class="p-4 rounded-lg border-none">
									<h2 class="text-pretty">
										Fabrica de muebles industriales premium a medida, en madera maciza y hierro. 
										<p>Trabajamos maderas de Guayubira, Peteribi, Guatambu, Guayca, Paraiso, Eucalipto.
											</p>	
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="wrap-section-con-enlaces">
						<section>
							<a href="/productos">
                                <div class="relative fotos-texto adicionales flex-wrap ofertas-info">
									<div class="absolute inset-0 flex items-center justify-center ">
										<h5 class="text-center text-white px-2 py-1">
                                            OFERTAS EN PRODUCTOS CON STOCK
                                        </h5>
                                    </div>
                                </div>
                            </a>
                        </section>
                        <section>
                            <a href="/overview.html?id=mesa-gervasoni-peteribi">
                                <div class="relative fotos-texto mesas flex-wrap mesas-info">
                                    <div class="absolute inset-0 flex items-center justify-center">
                                        <h5 class="text-center text-white px-2 py-1>">
                                            MESAS DE COMEDOR Y SILLAS
                                        </h5>
                                    </div>
                                </div>
                            </a>
                        </section>
                            
                            <section>
                                <a href="/overview.html?id=Rack-TV-Master">
                                    <div class="relative fotos-texto sillas flex-wrap rack-info">
                                        <div class="absolute inset-0 flex items-center justify-center">
                                            <h5 class="text-center text-white  px-2 py-1" id="rack-tv">RACK TV </h5>
                                        </div>
                                    </div>
                                    </a>
                                </section>
                                
                                <section>
                                    <a href="/overview.html?id=isla-barra-balcarce">
                                    <div class="relative fotos-texto adicionales flex-wrap islas-info">
                                        <div class="absolute inset-0 flex items-center justify-center">
                                            <h5 class="text-center text-white  px-2 py-1">
                                                ISLAS
                                            </h5>
                                        </div>
                                    </div>
                                </a>
                                </section>
                            </div>
                                
                                <section class="sub-paginas text-center p-4 bg-black shadow-lg rounded-lg mx-4 scale-90">
                                    <h2 class="text-2xl text-white my-8">20% OFF EN EFECTIVO CON TODOS LOS PRODUCTOS</h2>
                                </section>                        
                                <section class="sub-paginas text-center p-4 bg-white shadow-lg rounded-lg mx-4 my-4 scale-90 ">
                                    <h2>ENVIOS A TODO EL PAIS <span class="font-bold">CABA Y GRAN BUENOS AIRES CON FLETE PROPIO</span></h2>
                                </section>
                            </section>

                            
                    </section>
        
        
        
    </section>
</main>
</div>
</html>

		<style>
			
	
						   /* Main */
		
		
		/*info-inicio*/
		@keyframes slideInFromLeft {
			0% {
				transform: translateX(-100%);
			}
			100% {
				transform: translateX(0);
			}
		}
		
		.info-inicio {
			position: relative;
			animation: 3s ease-out  slideInFromLeft;
			transition: background-color 5s linear;
			box-shadow: 0px 0px 10px rgba(0, 0, 0, 1);
			background-color: var(--primary-color);
			padding: 20px;
			border-radius: 10px;
			box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
		}
		
		.info-inicio h2 {
			color: var(--black);
			text-align: center;
			overflow-wrap: break-word;
			word-wrap: break-word; 
		}
		
		.fotos-texto{
			background-position: center;
			background-size: cover;
			display: flex;
			align-items: center;
			justify-content: center;
			margin: 1rem;
			transition: transform 0.3s ease;
			font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		}
		.fotos-texto:hover {
			transform: scale(1.05);
		}
		.mesas-info {
			background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/img/section-info/sillas-mesas.jpg');
			height: 30vh;
		}
		
		.rack-info{
			background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("/img/section-info/img-rack.jpeg");
			height: 30vh;
		}
		
		.islas-info{
			background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("/img/section-info/isla.jpeg");
			height: 30vh;
		}
		
		.ofertas-info{
			background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("/img/section-info/silla-ofertas-productos con stock.jpg");
			height: 30vh;
		}
		


</style>		
</Layout>